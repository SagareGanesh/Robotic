{
  "manifest_version": 2,
  "name": "Robotic",
  "version": "0.0.1",
  "homepage_url": "https://github.com/pratik14/Robotic",
  "description": "Record user activity on browser and send them on specified URL",

  "background": {
    "scripts": ["xhr.js", "background.js"],
    "persistent": true
  },

  "content_scripts": [{
    "matches": [
      "<all_urls>"
    ],

    "js": ["selection.js", "content.js"],
    "css": ["selection.css"],
    "run_at": "document_end",
    "all_frames": false
  }],

  "browser_action": {
    "default_popup": "popup.html"
  },

  "permissions": ["<all_urls>", "activeTab", "tabs", "downloads", "storage", "notifications"]
}
